---
import Drawer from "../components/Drawer.astro"
---
<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>FIIS | Facultad de Ingeniería en Informática y Sistemas</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700;800&display=swap"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
    />
  </head>
  <body class="min-h-screen flex flex-col">
    <div class="flex-1">
      <!-- Barra superior con información de contacto -->
      <div class="bg-[#0066cc] text-white text-sm py-2 hidden md:block">
        <div class="container mx-auto px-4 flex justify-between">
          <div class="flex items-center gap-4">
            <span><i class="fas fa-phone mr-2"></i>074 234567</span>
            <span><i class="fas fa-envelope mr-2"></i>fiis@unas.edu.pe</span>
          </div>
          <div class="flex items-center gap-4">
            <a href="#" class="hover:text-gray-200"><i class="fab fa-facebook"></i></a>
            <a href="#" class="hover:text-gray-200"><i class="fab fa-twitter"></i></a>
            <a href="#" class="hover:text-gray-200"><i class="fab fa-instagram"></i></a>
          </div>
        </div>
      </div>

      <!-- Header principal -->
      <header class="bg-white shadow-md  top-0 z-50">
        <div class="container mx-auto px-4">
          <div class="flex items-center justify-between h-20">
            <div class="flex items-center gap-4">
              <img
                src="https://fiis.unas.edu.pe/sites/all/themes/business_responsive_theme/logo.png"
                alt="FIIS UNAS Logo"
                class="w-12 h-12 object-contain"
              />
              <div class="font-bold text-xl">
                <a href="#" class="hover:opacity-80">
                  <span class="text-[#0066cc]">FIIS</span>
                  <span class="text-lime-500">UNAS</span>
                </a>
              </div>
            </div>

            <!-- Menú de navegación -->
            <!-- Botón móvil -->
            <button class="md:hidden text-gray-700 hover:text-[#0066cc]">
              <i class="fa-solid fa-bars text-2xl"></i>
            </button>
          </div>
        </div>
      </header>

      <!-- Contenido principal -->
      <main class="py-8">
        <div class="container mx-auto px-4">
          <slot />
        </div>
      </main>
    </div>

    <!-- Footer mejorado -->
    <footer class="bg-gray-900 text-white">
      <div class="container mx-auto px-4 py-12">
        <div class="grid md:grid-cols-2 gap-8">
          <div>
            <h2 class="text-2xl font-bold mb-6">FIIS UNAS</h2>
            <p class="mb-4">
              <i class="fas fa-map-marker-alt mr-2 text-[#0066cc]"></i>
              Av. Universitaria s/n, Tingo María, Perú
            </p>
            <p class="mb-4">
              <i class="fas fa-phone mr-2 text-[#0066cc]"></i>
              074 234567
            </p>
            <p class="mb-4">
              <i class="fas fa-envelope mr-2 text-[#0066cc]"></i>
              fiis@unas.edu.pe
            </p>
          </div>
          
          <div>
            <h2 class="text-2xl font-bold mb-6">Suscríbete</h2>
            <div class="flex gap-2">
              <input 
                type="email" 
                placeholder="Ingresa tu email"
                class="flex-1 px-4 py-2 rounded-lg text-gray-900 focus:outline-none focus:ring-2 focus:ring-[#0066cc]"
              />
              <button class="bg-[#0066cc] hover:bg-blue-700 px-6 py-2 rounded-lg font-medium transition-colors">
                Suscribirse
              </button>
            </div>
          </div>
        </div>

        <div class="mt-12 pt-8 border-t border-gray-800">
          <div class="flex flex-col md:flex-row justify-between items-center gap-4">
            <p class="text-gray-400">
              © 2024 FIIS UNAS. Todos los derechos reservados.
            </p>
            <div class="flex gap-6">
              <a href="#" class="hover:text-[#0066cc] transition-colors">
                <i class="fab fa-facebook text-xl"></i>
              </a>
              <a href="#" class="hover:text-[#0066cc] transition-colors">
                <i class="fab fa-twitter text-xl"></i>
              </a>
              <a href="#" class="hover:text-[#0066cc] transition-colors">
                <i class="fab fa-instagram text-xl"></i>
              </a>
            </div>
          </div>
        </div>
      </div>
    </footer>

    <Drawer />
  </body>
</html>

<style>
  body {
    @apply font-poppins bg-gray-50;
  }
</style>