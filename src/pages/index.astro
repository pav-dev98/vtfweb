---
import Cita from '../components/Cita.astro';
import Layout from '../layouts/Layout.astro';
import img from '../assets/facu.jpg';
---

<Layout>
  <div class="hero-section flex h-screen">
    <div class="w-7/12 flex flex-col justify-center p-8 gap-8">
      <div>
        <p class="text-6xl mb-4 text-gray-950 capitalize leading-snug">
          Explora nuestas
          <span class="font-bold text-blue-500">instalaciones</span>
          y
          <span class="font-bold text-blue-500">programas</span>
        </p>
        <p class="text-gray-400">
          Abrimos nuestras puertas para que puedas conocer nuestras
          instalaciones y servicios.
        </p>
      </div>
      <div class="mt-12 flex gap-4 items-center">
        <button
          class="bg-blue-500 py-[.5rem] px-10 text-white rounded-lg py-4 hover:bg-blue-600"
          id="goToCitaButton"
        >
          Agenda tu visita
        </button>
        <a href="" class="opacity-60 text-blue-950">
          <span class="bg-blue-100 text-blue-500">
            <i class="fa-solid fa-play"></i>
          </span>
          Hecha un vistaso
        </a>
      </div>
    </div>
    <div class="w-5/12 relative flex items-center justify-center">
      <div class="img-container relative">
        <img
          src={img.src}
          alt="asdas"
          class="w-[400px] h-[500px] object-cover rounded-2xl"
        />
        <div
          class="floating rounded-bl-[2rem] rounded-md absolute top-[-60px] left-[-60px] bg-white shadow-2xl w-[150px] p-4 flex flex-col items-center"
        >
          <span class="rounded-full p-2 flex text-blue-500 bg-blue-100 text-xs">
            <i class="fa-solid fa-magnifying-glass"></i>
          </span>
          <span class="text-blue-500 text-2xl mt-1">3</span>
          <p class="text-gray-400 text-xs text-center mt-2">
            Lineas de carrera ajustadas al mercado
          </p>
        </div>
      </div>
    </div>
  </div>
  <Cita />
</Layout>
<script>
  document.getElementById('goToCitaButton')?.addEventListener('click', () => {
    document
      .getElementById('cita-section')
      ?.scrollIntoView({ behavior: 'smooth' })
  })
</script>
